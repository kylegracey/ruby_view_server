<%
  def link_to(name, url)
    return "<a href='#{url}'>#{name}</a>"
  end
%>
<html>
  <body>
    <h1>You're using a layout</h1>
    <div>
      <h3> I'm a header</h3>
      <p>Navigation:</p>
      <%= link_to('Home', 'index.html') %>
      <%= link_to('Me', 'me.html') %>
    </div>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
    </div>
  </body>
</html>